<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
        <form action="/search">
          <div class="input-group col-20">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          <div class="input-group col-3">
            <select class="form-select w-50" id="sort" name="sort">
              <option value="1" {{#if typeObject.isOne }}selected{{/if}}>A > Z</option>
              <option value="2" {{#if typeObject.istwo }}selected{{/if}}>Z > A</option>
              <option value="3" {{#if typeObject.isThree }}selected{{/if}}>類別</option>
              <option value="4" {{#if typeObject.isFour }}selected{{/if}}>地區</option>
            </select>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantsData}}

        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <div class="card-footer d-flex justify-content-end ">
            <a href="/restaurants/{{this._id}}/edit"><button type="button" class="btn btn-link btn-sm">編輯</button></a>
            <a href="/restaurants/{{this._id}}"><button type="button" class="btn btn-link btn-sm">詳細資訊</button></a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="post"onsubmit="return deleteRestaurant()">
              <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash" aria-hidden="true"></i>
              </button>
              <script>
              function deleteRestaurant() {
                let result = confirm('確定要刪除該筆餐廳資料?')
                if (result) {
                  return true
                } else {
                  return false
                }
              }
              </script>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>