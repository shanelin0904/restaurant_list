<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="text-end mg-3">
        <a href="/restaurants/new"><button class="btn btn-primary">新增喜歡的餐廳</button></a>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantsData}}

        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <div class="card-footer d-flex justify-content-end ">
            <a href="/restaurants/{{this._id}}/edit"><button type="button" class="btn btn-link btn-sm">編輯</button></a>
            <a href="/restaurants/{{this._id}}"><button type="button" class="btn btn-link btn-sm">詳細資訊</button></a>

            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal"><i
                class="fa fa-trash" aria-hidden="true"></i></button>

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{!-- delete modal --}}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">您要刪除嗎？</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger btn-sm">刪除</button>
        </form>
        <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">不</button>
      </div>
    </div>
  </div>
</div>