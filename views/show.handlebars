
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        {{#if restaurant.google_map}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
        {{/if}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <div class="d-flex justify-content-end"><a href="/restaurants/{{restaurant._id}}/edit" class="btn btn-success mb-3">編輯</a>
      <button type="button" class="btn btn-danger mb-3" data-bs-toggle="modal" data-bs-target="#deleteModal">
        <i class="fa fa-trash" aria-hidden="true"></i>
      </button>
      <a href="/" class="btn btn-primary mb-3"><i class="fa fa-home" id= "home" aria-hidden="true"></i></a></div>
    </div>
  </div>
</div>

{{!-- delete modal --}}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">您要刪除嗎？</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger btn-sm">刪除</button>
        </form>
        <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">不</button>
      </div>
    </div>
  </div>
</div>
