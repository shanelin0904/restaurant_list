<!-- ./views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- link css files here -->
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  
  <link rel="shortcut icon"
    href="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
    type="image/x-icon" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css" />
</head>
<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        {{#if isAuthenticated}}{{ user.name}}'s {{/if}}
        餐廳清單
      </a>
      <a href="/restaurants/new"><button class="btn btn-white"><i class="fa fa-plus " aria-hidden="true"></i>新增喜歡的餐廳</button></a>
      {{#if isAuthenticated}}
      <a href="/users/logout" class="btn btn-outline-dark">Logout</a>
      {{else}}
      <a href="/users/login" class="btn btn-outline-dark">Login</a>
      {{/if}}
     
    </div>
  </nav>

  <div class="banner"></div>
</header>

<body>
  <!-- partial templates will replace the part of "body" here -->
  {{{ body }}}
  <!-- include javascript files here -->
  <script src="/javascripts/popper.js"></script>
  <script src="/javascripts/bootstrap.js"></script>
</body>

</html>